{
  "private": true,
  "engines": {
    "node": ">=0.10.0"
  },
  
  "devDependencies": {
    "bower": "latest",
    "jshint": "latest",
    "browserify" : "latest",
    "watch": "latest",
    "parallelshell": "latest",
    "http-server" : "latest",
    "live-reload" : "latest",
    "node-sass" : "latest"
  },

  "scripts": {
    "post...install"   : "bower install",
    
    "serve"         : "http-server -p 9090 dev/",
    "livereload"    : "live-reload --port 9091 dev/",

    "browserify"    : "mkdir -p dev/scripts && browserify app/scripts/main.js > dev/scripts/main.js",
    "lint"          : "jshint app/scripts/*.js",
    "sass"          : "mkdir -p dev/styles && node-sass app/styles/* -r -o dev/styles/",

    "devel:scripts"  : "npm run browserify",
    "build:scripts" : "", 
    "watch:scripts" : "watch 'npm run devel:scripts' app/scripts/",

    "build:markup"  : "",
    "watch:markup"  : "",

    "devel:styles"  : "npm run sass",
    "build:styles"  : "",
    "watch:styles"  : "watch 'npm run devel:styles' app/styles/",

    
    "build"         : "npm run build:scripts && npm run build:markup && npm run build:styles",
    "watch"         : "parallelshell 'npm run watch:scripts' 'npm run livereload' 'npm run serve' 'npm run watch:styles' 'npm run watch:markup'",

    "prebuild"      : "npm run lint",

    "clean": "rm -r dist/*"
  }
}
